@page
@model Controls.Pages.Requests.DetailsModel
@using Controls.Helpers
@addTagHelper *, Controls

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div>
    <h4>Details of DOI request</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Request.doi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Request.doi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Request.doi_date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Request.doi_date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Request.first_use)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Request.first_use)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Request.count_use)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Request.count_use)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Request.status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Request.status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Request.methods)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Request.methods)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Request.cert)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Request.cert)
        </dd>
    </dl>

</div>
<div>
    <qrcode alt="DOI request" content="@Model.DoiInstance" />
    <p>
        @Model.DoiInstance
    </p>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Request.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
