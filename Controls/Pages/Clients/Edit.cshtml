@page
@model Controls.Pages.Clients.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label class="col-lg col-form-label" style="font-size:30px">Edit Client</label>
                <div class="col-lg">
                    <input asp-for="Client.locator" class="form-control-plaintext" style="vertical-align:baseline" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Client.sub" class="control-label"></label>
                <input asp-for="Client.sub" class="form-control" />
                <span asp-validation-for="Client.sub" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.publicKey" class="control-label"></label>
                <input asp-for="Client.publicKey" class="form-control" />
                <span asp-validation-for="Client.publicKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.status" class="control-label"></label>
                <input asp-for="Client.status" class="form-control" />
                <span asp-validation-for="Client.status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.purpose" class="control-label"></label>
                <input asp-for="Client.purpose" class="form-control" />
                <span asp-validation-for="Client.purpose" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Client.created" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                    <input asp-for="Client.created" class="form-control-plaintext" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Client.updated" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                    <input asp-for="Client.updated" class="form-control-plaintext" />
                </div>
            </div>
            <div class="form-group" style="margin-left:11px">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
